{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <div class="row">
        {% for element in productsList %}
      <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="card border-dark mb-3">
          <a href="/products/{{element.idProduct}}">
            <img class="card-img-top" src={{element.image}} alt="Card image cap">
            <h6>{{element.name}}</h6>
          </a>
        </div>
      </div>
        {% endfor  %}
    </div>
  </div>
{% endblock %}
